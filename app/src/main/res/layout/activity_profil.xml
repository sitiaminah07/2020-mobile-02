<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfilActivity">

    <Button
        android:layout_width="28dp"
        android:layout_height="18dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="300dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/arrow_left_black"
        app:layout_constraintBottom_toTopOf="@id/personal_info"
        android:onClick="postLogin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.059"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.666"
        app:layout_constraintTop_toBottomOf="@id/personal_info" />

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="295dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/futura_pt_demibold"
        android:text="Edit"
        android:textColor="#FF0000"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/personal_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:fontFamily="@font/futura_pt_demibold"
        android:text="Personal Info"
        android:textColor="#313131"
        android:textSize="32sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="47dp"
        />

    <ImageView
        android:id="@+id/pp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="85dp"
        android:scaleType="fitXY"
        android:src="@drawable/profile_picture"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/edit"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="144dp"
        android:scaleType="fitXY"
        android:src="@drawable/edit_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.639"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/about"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="112dp"
        android:fontFamily="@font/futura_pt_demibold"
        android:text="About me"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@id/personal_info"
        app:layout_constraintTop_toBottomOf="@id/personal_info" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="315dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="213dp"
        android:fontFamily="@font/futura_pt_demibold"
        android:text="I think this is one of the most important qualities to have as a driver: Show responsibility for other traffic participants."
        android:textColor="#000000"
        android:textSize="14dp"
        app:layout_constraintEnd_toEndOf="@+id/edit"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/about"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/garis1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:src="@drawable/grey_line_padded"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.659"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:fontFamily="@font/futura_pt_demibold"
        android:text="Full name"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@id/garis1"
        app:layout_constraintTop_toBottomOf="@id/garis1"
        app:layout_goneMarginTop="15dp" />

    <TextView
        android:id="@+id/nama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/futura_pt_demibold"
        android:text="Jonathan Doe"
        android:textColor="#000000"
        android:textSize="12sp"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@id/garis1"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/name"/>

    <ImageView
        android:id="@+id/garis2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/grey_line_padded"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintTop_toBottomOf="@id/name"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="@+id/garis1"
        tools:layout_editor_absoluteY="306dp" />

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:fontFamily="@font/futura_pt_demibold"
        android:text="Email"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@id/garis2"
        app:layout_constraintTop_toBottomOf="@id/garis2"
        app:layout_goneMarginTop="15dp" />

    <TextView
        android:id="@+id/email2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/futura_pt_demibold"
        android:text="jonathan.designer@gmail.com"
        android:textColor="#000000"
        android:textSize="12sp"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@id/garis2"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/email"/>

    <ImageView
        android:id="@+id/garis3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/grey_line_padded"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintTop_toBottomOf="@id/email"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="@+id/garis2"/>

    <TextView
        android:id="@+id/gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:fontFamily="@font/futura_pt_demibold"
        android:text="Gender"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@id/garis2"
        app:layout_constraintTop_toBottomOf="@id/garis3"
        app:layout_goneMarginTop="15dp" />

    <TextView
        android:id="@+id/jk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/futura_pt_demibold"
        android:text="Male"
        android:textColor="#000000"
        android:textSize="12sp"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@id/garis3"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/gender"/>

    <ImageView
        android:id="@+id/garis4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/grey_line_padded"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintTop_toBottomOf="@id/gender"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="@+id/garis3"/>

    <TextView
        android:id="@+id/phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:fontFamily="@font/futura_pt_demibold"
        android:text="Phone No."
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@id/garis3"
        app:layout_constraintTop_toBottomOf="@id/garis4"
        app:layout_goneMarginTop="15dp" />

    <TextView
        android:id="@+id/nomor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/futura_pt_demibold"
        android:text="+123423423423"
        android:textColor="#000000"
        android:textSize="12sp"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@id/garis4"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/phone"/>

    <ImageView
        android:id="@+id/garis5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/grey_line_padded"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintTop_toBottomOf="@id/phone"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="@+id/garis4"/>

    <TextView
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:fontFamily="@font/futura_pt_demibold"
        android:text="Address"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@id/garis5"
        app:layout_constraintTop_toBottomOf="@id/garis6"
        app:layout_goneMarginTop="15dp" />

    <TextView
        android:id="@+id/city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:fontFamily="@font/futura_pt_demibold"
        android:text="City"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@id/garis4"
        app:layout_constraintTop_toBottomOf="@id/garis5"
        app:layout_goneMarginTop="15dp" />

    <TextView
        android:id="@+id/kota"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/futura_pt_demibold"
        android:text="Ottawa"
        android:textColor="#000000"
        android:textSize="12sp"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@id/garis5"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/city"/>

    <ImageView
        android:id="@+id/garis6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/grey_line_padded"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintTop_toBottomOf="@id/city"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="@+id/garis5"/>

    <TextView
        android:id="@+id/alamat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/futura_pt_demibold"
        android:text="296 Elgin St, Ottawa, ON x 1M3,"
        android:textColor="#000000"
        android:textSize="12sp"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@id/garis6"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/address"/>

    <TextView
        android:id="@+id/negara"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/futura_pt_demibold"
        android:text="Canada"
        android:textColor="#000000"
        android:textSize="12sp"
        android:layout_marginTop="1dp"
        app:layout_constraintTop_toBottomOf="@id/alamat"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/address"/>

    <ImageView
        android:id="@+id/garis7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/grey_line_padded"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintTop_toBottomOf="@id/negara"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="@+id/garis6"/>


</androidx.constraintlayout.widget.ConstraintLayout>